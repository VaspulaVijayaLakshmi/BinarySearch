https://www.geeksforgeeks.org/problems/minimize-max-distance-to-gas-station/1

class Solution {
  public:
    
    bool distancePossible(vector<int> &stations, int K,double maxDistance){
        
        int gasStations=0;
        
        for(int i=0;i<stations.size()-1;i++){
            
              
              //alsomwe can just do gasstaions++;
              //because if distance is larger I can put distance/k

              double gap = stations[i + 1] - stations[i];
              gasStations += int(gap / maxDistance);  // Floor division

              
            //if at any point more than K stations are at a distance > maxDstance llowed
            //then I cannot place any more gas Sttaions
            if(gasStations>K) return false; 
                
            }
            
    
        
        return true;
    }
    
    
    
    
    //Also the distance can be fractions.
    
    double minMaxDist(vector<int> &stations, int K) {
        
        //alredy sorted
        // sort(stations.begin(),stations.end());
        
        double n=stations.size();
        double l=0,h=stations[n-1]-stations[0];
        double dis=1e-6; // Precision
        
        while(h-l>dis){
            
            double mid = l+(h-l)/2;
            
            if(distancePossible(stations,K,mid)){
                dis = mid;
                h=mid;
            }
            
            else l=mid;
        }
        
        return h;
        
    }
};


// maxdistance is minimized


// sort the gas stations

// the first is l
// and max is high
