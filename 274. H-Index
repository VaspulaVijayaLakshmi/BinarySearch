class Solution {
public:
    int hIndex(vector<int>& citations) {

        sort(citations.begin(),citations.end());

         int n = citations.size();
        int start = 0, end = n - 1;
        int ans = 0;
        while (start <= end)
        {
            int mid = start + (end - start) / 2;

             if (citations[mid] >= n - mid)
            {
                ans = max(ans, n - mid);
                end = mid - 1;
            }
            else
            {
                start = mid + 1;
            }

        }

        return ans;
    }
    
};


// [3,0,6,1,5]

// 5 papers 



// [0,1,3,5,6]

// 0 - 5
// 1 - 4
// 3 - 3
// 5 - 2
// 6 - 1







